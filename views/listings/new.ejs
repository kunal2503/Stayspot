<% layout("/layouts/boilerplate") -%>
    <h3 class="text-center">Create a new Listing</h3>
    <div class="p-4 border rounded shadow-sm bg-light w-50 mx-auto m-5">
        
        <form action="/listing" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
            <h2 class="mb-4 text-center">Add a Listing</h2>

            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" placeholder="Enter a title" name="listing[title]" required>
                <div class="invalid-feedback">Please provide a title.</div>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" placeholder="Enter a description" rows="3" required></textarea>
                <div class="invalid-feedback">Please provide a description.</div>
            </div>

            <div class="mb-3">
                <label class="form-label">Upload Image</label>
                <input type="file" class="form-control" placeholder="Image URL or Link" name="listing[image]" >
                <div class="invalid-feedback">Please provide a valid image URL.</div>
            </div>
            <div class="mb-3">
                <label class="form-label">Price</label>
                <input  class="form-control" placeholder="Enter a Price" name="listing[price]" required min="1">
                <div class="invalid-feedback">Please enter a valid price.</div>
            </div>
            
            <div class="row mb-3">

            <!-- Country & Location in one line -->
                <div class="col-md-6">
                    <label class="form-label">Country</label>
                    <input type="text" class="form-control" placeholder="Enter a Country" name="listing[country]" required>
                    <div class="invalid-feedback">Please enter a country.</div>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Location</label>
                    <input type="text" class="form-control" placeholder="Enter a Location" name="listing[location]" required>
                    <div class="invalid-feedback">Please enter a location.</div>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-sm">Add Listing</button>
            </div>
        </form>
    </div>



