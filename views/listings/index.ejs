<% layout("/layouts/boilerplate") -%>
<body>
    <div class="container mt-4">
        <!-- <h4 class="text-center mt-3">All Listings</h4> -->
        
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% for(let listing of listData) { %>
                <div class="col">
                    <a href="/listing/<%= listing._id %>" class="text-decoration-none">
                        <div class="card h-100">
                            <img src="<%= listing.image.url %>" class="card-img-top img-fluid" alt="listing_image" style="object-fit: cover; height: 200px;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= listing.title %></h5>
                                <p class="card-text"><%= listing.location %>, <%= listing.country %></p>
                                <p class="card-text">
                                    <b>&#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %></b>
                                </p>
                                <div class="mt-auto"></div> <!-- Pushes the price to the bottom -->
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</body>