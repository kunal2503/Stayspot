<% if(success_msg && success_msg.length>0) {%>
<div class="alert alert-success alert-dismissible fade show mt-1 col-4 offset-3" role="alert" >
    <%= success_msg %>
    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if(error_msg && error_msg.length>0) {%>
    <div class="alert alert-danger alert-dismissible fade show mt-1 col-4 offset-3" role="alert" >
        <%= error_msg %>
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>